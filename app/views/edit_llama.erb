<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4">
    <form action="/llamas/<%= @llama.id %>/update" method="POST">
      <div class="form-group">
        <input type="text" name="name" placeholder="Enter llama's name" class="form-control" value="<%= @llama.name %>">
      </div>

      <div class="form-group">
        <input type="text" name="age" placeholder="Enter llama's age" class="form-control" value="<%= @llama.age %>">
      </div>

      <div class="form-group">
        <select name="quality" class="form-control">
          <% Llama.qualities_for_select.each do |quality| %>
            <%
            if quality.downcase == @llama.quality
              selected = "selected"
            else
              selected = ""
            end
            %>
            <option value="<%= quality.downcase %>" <%= selected %>><%= quality %></option>
          <% end %>
        </select>
      </div>

      <div class="form-group">
        <input type="text" name="gender" placeholder="Enter llama's gender" class="form-control" value="<%= @llama.gender %>">
      </div>

      <input type="submit" value="Save" class="btn btn-default" class="form-control">
    </form>
  </div>
</div>