<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4">
    <form action="/llamas/create" method="POST">
      <div class="form-group">
        <input type="text" name="name" placeholder="Enter llama's name" class="form-control">
      </div>

      <div class="form-group">
        <input type="text" name="age" placeholder="Enter llama's age" class="form-control">
      </div>

      <div class="form-group">
        <select name="quality" class="form-control">
          <option value="high">High</option>
          <option value="medium">Medium</option>
          <option value="low">Low</option>
        </select>
      </div>

      <div class="form-group">
        <input type="text" name="gender" placeholder="Enter llama's gender" class="form-control">
      </div>

      <input type="submit" value="Save" class="btn btn-default" class="form-control">
    </form>
  </div>
</div>