<div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4">
    <h1>New Garment for <%= @llama.name %></h1>

    <form action="/llamas/<%=@llama.id%>/garments/create" method="POST">
      <div class="form-group">
        <input type="text" name="name" placeholder="Enter garment name" class="form-control">
      </div>

      <div class="form-group">
        <textarea name="description" class="form-control"></textarea>
      </div>

      <input type="submit" value="Save" class="btn btn-default" class="form-control">
    </form>
  </div>
</div>